{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/vercel-server.js"
    },
    {
      "src": "/admin",
      "dest": "/backend/vercel-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin.html"
    }
  ]
}
